@model Goal.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/blank-external.cshtml";
}

<div id="external-page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 body-content">

                <div class="banner">
                    <section id="title-section">
                        <h1 class="title"><span class="fa fa-diamond orange"></span> Goal</h1>
                        <h2 class="subtitle">Managing your budget made easy.</h2>
                    </section>
                    <section>
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group form-inline">
                                <div class="col-md-3">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control big", @placeholder = "Email"})
                                </div>

                                <div class="col-md-3">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control big", @placeholder = "Password" })
                                </div>

                                <div class="col-md-3">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control big", @placeholder = "Confirm Password" })
                                </div>

                                <div class="col-md-3">
                                    <input type="submit" class="btn btn-success btn-lg" value="Sign Up" />
                                </div>
                            </div>
                        }
                    </section>

                </div>
                    

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->


