@model Goal.Models.ViewModels.ErrorMessageVM
@{
    Layout = "~/Views/Shared/blank-external.cshtml";
}
<div id="ex-login">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 body-content">
                <div class="bar-accent">
                    <span class="fa fa-minus-circle fa-3x inline-block red"></span>
                    @if (Model.Code > 0)
                    {
                        <h2 class="inline-block">@Model.Code : @Model.Message</h2>
                    }
                    else
                    {
                    <h2 class="inline-block">@Model.Message</h2>
                    }
                    
                </div>

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}